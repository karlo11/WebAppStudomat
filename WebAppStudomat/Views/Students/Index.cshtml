@model IEnumerable<WebAppStudomat.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Students</h2>

<p>
    @Html.ActionLink("New student", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Full name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JMBAG)
        </th>
        <th>
            Date of birth
        </th>
        <th>
            Date of enrollment
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JMBAG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfEnrollment.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
